{% extends 'base.html.twig' %}
{% block content %}

	<div class="lux-login-wrapper">
		<main class="lux-login-main">

			<div class="lux-login-card">
				<h2 class="lux-login-card-title">Bienvenue</h2>
				<p class="lux-login-subtitle">Connectez-vous pour accéder à votre espace</p>

				{% if formErrors.global %}
					<div class="lux-login-error-global">{{ formErrors.global }}</div>
				{% endif %}

				<form method="post" class="lux-login-form">

					<div class="lux-login-field">
						<label class="lux-login-label">Email</label>
						<input type="email" name="email" class="lux-login-input" value="{{ formData.email }}" required>
						{% if formErrors.email %}
							<div class="lux-login-error">{{ formErrors.email }}</div>
						{% endif %}
					</div>

					<div class="lux-login-field">
						<label class="lux-login-label">Mot de passe</label>
						<input type="password" name="password" class="lux-login-input" required>
						{% if formErrors.password %}
							<div class="lux-login-error">{{ formErrors.password }}</div>
						{% endif %}
					</div>

					<button class="lux-login-btn" type="submit">Connexion</button>
				</form>

				<div class="lux-login-links">
					<a href="#" class="lux-login-link">Mot de passe oublié ?</a>
					<a href="#" class="lux-login-link">Créer un compte</a>
				</div>

			</div>

		</main>
	</div>
{% endblock content %}
